<div
  class="
    container flex flex-col items-center justify-center mx-auto min-h-screen py-8
  "
>
  <%= render "header",
  first_link: link_to("Suas vagas", jobs_path),
  second_link: button_to("Sair", destroy_employer_session_path, method: :delete) %>
  <div class="w-11/12 xl:w-3/4 bg-white shadow-lg rounded-lg p-8 my-6 mt-24">
    <% if notice.present? %>
      <p
        class="
          py-2 px-3 bg-green-100 mb-5 text-green-500 text-center font-medium rounded-lg
          inline-block
        "
        id="notice"
      ><%= notice %></p>
    <% end %>

    <%= render "employer_data" %>

    <div class="mt-6 text-center flex flex-row justify-between">
      <%= link_to "Editar Perfil",
      edit_dashboard_path,
      class:
        "text-white bg-green-600 hover:bg-green-700 px-6 py-2 rounded-md font-bold" %>
      <%= button_to "Excluir Perfil",
      registration_path(current_employer),
      method: :delete,
      class: "text-white bg-red-600 hover:bg-red-700 px-6 py-2 rounded-md font-bold" %>
    </div>
  </div>
</div>
