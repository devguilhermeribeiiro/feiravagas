<header class="bg-white shadow-lg w-full fixed top-0 left-0 z-40">
  <div class="w-11/12 mx-auto px-4 sm:px-6 lg:px-8">
    <nav
      class="flex items-center justify-between h-20 sm:h-24 xl:h-24 relative"
      data-controller="mobile-menu"
    >

      <div
        class="
          flex-shrink-0 text-2xl sm:text-3xl xl:text-4xl font-extrabold text-green-600
        "
      >
        <%= link_to "Feira Vagas", jobs_path %>
      </div>

      <div class="lg:flex lg:items-center lg:space-x-4 hidden md:hidden">
        <div
          class="
            text-green-600 hover:bg-green-200 px-4 py-2 rounded-md text-md font-bold
          "
        >
          <%= first_link %>
        </div>

        <div
          class="
            text-red-600 hover:bg-red-200 px-4 py-2 rounded-md text-md font-bold
          "
        >
          <%= second_link %>
        </div>
      </div>

      <button
        data-action="click->mobile-menu#toggle"
        aria-label="Menu"
        class="
          block lg:hidden px-2 py-1 text-green-700 hover:bg-green-100 rounded-md
        "
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"
          ></path>
        </svg>
      </button>

      <div
        data-mobile-menu-target="menu"
        class="
          lg:hidden fixed inset-0 bg-white z-50 hidden transition-transform transform
          duration-300 ease-in-out
        "
      >
        <div class="flex flex-col items-end px-4 py-8">
          <button
            data-action="click->mobile-menu#toggle"
            aria-label="Fechar Menu"
            class="self-end px-4 py-2 text-gray-700"
          >
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M6 18L18 6M6 6l12 12"
              ></path>
            </svg>
          </button>

          <div class="flex flex-col items-end px-4">

            <div
              class="
                text-green-700 hover:bg-green-100 px-2 py-2 rounded-md text-md font-bold
              "
            >
              <%= first_link %>
            </div>

            <div
              class="
                text-red-700 hover:bg-red-100 px-2 py-2 rounded-md text-md font-bold
              "
            >
              <%= second_link %>
            </div>

          </div>
        </div>
      </div>
    </nav>
  </div>
</header>
