<div class="container mx-auto min-h-screen flex flex-col items-center justify-center">
  
  <h2 class="text-2xl text-green-500 font-semibold text-center mb-6">Sign up</h2>
  
  <div class="w-full max-w-sm bg-white p-8 rounded-md shadow-md mb-4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 text-sm font-semibold mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'mt-1 p-2 border border-gray-300 rounded w-full' %>
      </div>
    
      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700 text-sm font-semibold mb-2" %>
        <% if @minimum_password_length %>
          <em class="text-xs text-gray-500">(<%= @minimum_password_length %> caracteres no m√≠nimo)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: 'mt-1 p-2 border border-gray-300 rounded w-full' %>
      </div>
    
      <div class="mb-6">
        <%= f.label :password_confirmation, class: "block text-gray-700 text-sm font-semibold mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'mt-1 p-2 border border-gray-300 rounded w-full' %>
      </div>
    
      <div class="actions">
        <%= f.submit "Sign up", class: "bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>
  </div>
  
  <%= render "devise/shared/links" %>
</div>
